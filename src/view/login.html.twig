<div class="login-form">
    {% if errorMessage %}
        <div class="error-message">{{ errorMessage }}</div>
    {% endif %}
    <form action = "" method = "post">
        <input class="form-input" type="text" name="login" placeholder="Username">
        <input class="form-input" type="text" name="password" placeholder="Password">
        <input name="csrf_token" type="hidden"  value={{ token }} />
        <button class="button form-input" type="submit">Login</button>
    </form>
</div>
